<%= render 'shared/encabezado_personalizado', title: 'Gestión de Personal' %>
<%= link_to 'Nuevo Trabajador', new_personal_path ,
            class: "btn btn-primary btn-sm" %>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped">
      <thead>
      <tr style="background: lightgrey">
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Cedula</th>
        <th>Dirección</th>
        <th>Telefono Casa</th>
        <th>Telefono celular</th>
        <th>Sexo</th>
        <th>Fecha Nacimiento</th>
        <th colspan="3" style="text-align: center; border:groove">Operaciones</th>
      </tr>
      </thead>

      <tbody>
      <% @personals.each do |personal| %>
          <tr>
            <td><%= personal.nombre %></td>
            <td><%= personal.apellido %></td>
            <td><%= format_cedula(personal.cedula) %></td>
            <td><%= personal.direccion %></td>
            <td><%= personal.telefono_casa %></td>
            <td><%= personal.telefono_celular %></td>
            <td><%= personal.sexo %></td>
            <td><%= personal.fecha_nacimiento.strftime("%m/%d/%Y") %></td>
            <td><%= link_to 'Ver ', personal,type:"button",
                            class:"btn btn-link  btn-sm" %></td>
            <td><%= link_to 'Editar', edit_personal_path(personal),type:"button",
                            class:"btn btn-link  btn-sm" %></td>
            <td><%= link_to 'Eliminar', personal, method: :delete,
                            data: { confirm: '¿Seguro que desea eliminar Empleado?' },
                            type:"button",
                            class:"btn btn-link  btn-sm" %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>
  </div>
</div>