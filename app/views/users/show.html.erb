<% provide(:title, @user.email) %>
<div class="row">
  <aside class="col-md-6 col-md-offset-3">
    <section class="user_info">
      <%= gravatar_for @user %>
      <p>
        <strong>Email: </strong><%= @user.email %><br>
        <strong>Rol: </strong>  <%= rol_to_s(@user.rol)%>
      </p>
      <% personal = Personal.find_by(id: @user.personal_id )%>
      <% unless personal.nil? %>
          <fieldset>
            <legend>Empleado </legend>
            <%= render 'personals/personal_individual',personal: personal%>
          </fieldset>
      <% end %>

      <br>
      <br>
      <br>
      <% if current_user.gerente_ds? %>
          <%= link_to 'Editar Usuario', edit_user_path(@user),
                      class:"btn btn-default btn-lg active",
                      role:"button"  %>
          <%= link_to 'Listar Usuarios', users_path, class:"btn btn-default
                btn-lg active",
                      role:"button"  %>
      <%end %>

    </section>
  </aside>
</div>